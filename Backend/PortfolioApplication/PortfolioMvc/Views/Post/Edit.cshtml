@model EditPostVM

@section css{
<link rel="stylesheet" href="~/assets/styles/form.css" asp-append-version="true">
}

@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger"></div>

}

<div class="flex-container">
    <form asp-action="Edit" asp-controller="Post" method="post" >
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        
    
        
       

        <label asp-for="Body"></label>
        <textarea asp-for=Body placeholder="Write something.." style="height:10em"></textarea>
       <div>
            <a asp-action="Index" asp-controller="Post" class="bootstrap-btn-grey">Back</a>
        <input type="submit" value="Update" class="bootstrap-btn">
       </div>
    </form>
</div>
