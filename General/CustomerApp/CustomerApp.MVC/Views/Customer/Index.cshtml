@using CustomerApp.MVC.DTOs
@model List<ListCustomerDto>

  
  <div class="container">
        <div class="row">
            <div class="col-md-12 my-3">
                <a class="btn btn-primary w-100" id="getAllCustomersBtn" asp-action="GetAllCustomers">Get Data</a>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-12">
                <form id="AddForm" class="w-100 d-flex flex-row" method="post" asp-action="AddCustomer">
                    <input id="FirstName" name="FirstName" class="form-control" />
                    <input id="LastName" name="LastName" class="form-control" />
                    <button id="addCustomerBtn" class="btn btn-primary flex-shrink-0 ms-2" type="submit">Add Customer</button>
                </form>
            </div>
        </div>
        <div class="row">
            <div id="LoadingSpinner"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <ul class="list-group" id="main-list">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item">@item.FullName</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    